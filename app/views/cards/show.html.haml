.side
  - @cards.each do |card|
    %a.side--item{'href' => session_card_path(@session, card), 'up-target' => '.main', 'up-transition' => 'cross-fade'}
      = card.title
  .side--more
    More

.main
  .card
    .card--head{style: @card.pattern_css}
      .card--title
        = @card.title
      .card--edit
        = link_to 'Edit', [:edit, @session, @card], class: 'action is-blue', 'up-target' => '.screen', 'up-transition' => 'move-left'
    .card--body
      = simple_format @card.body
